{
    "_id": ObjectId,                     // Unique identifier for each course (auto-generated)
    "title": String,                     // Title of the course
    "description": String,               // Brief description of the course content
    "category": String,                  // Category or subject area of the course (e.g., 'Programming', 'Design')
    "instructor": {
      "name": String,                    // Instructor's name
      "email": String,                   // Instructor's email for contact
      "bio": String                      // Short bio or background of the instructor
    },
    "duration": {
      "value": Number,                   // Duration of the course (e.g., 30)
      "unit": String                     // Unit of duration (e.g., 'hours', 'days', 'weeks')
    },
    "level": String,                     // Difficulty level (e.g., 'Beginner', 'Intermediate', 'Advanced')
    "price": {
      "amount": Number,                  // Price of the course
      "currency": String                 // Currency type (e.g., 'USD', 'EUR')
    },
    "tags": [String],                    // Array of tags for easy searching (e.g., ['web development', 'javascript'])
    "enrollment": {
      "total": Number,                   // Total number of enrolled students
      "limit": Number                    // Enrollment limit for the course
    },
    "createdAt": Date,                   // Date when the course was created
    "updatedAt": Date,                   // Date when the course was last updated
    "isActive": Boolean                  // Status of the course (active/inactive)
  }
  